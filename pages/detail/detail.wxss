/* pages/details/details.wxss */
page{
  background-color: #EDEDED;
}
/* view{
  background-color: #fff;
} */
image{
  width: 100%;
  display: block;
}
.content{
  padding: 10px 20px;
  margin-bottom: 10px;
  background-color: #fff;
}
.content .price .new{
  font-size: 30px;
  color: #EB625C;
}
.content .price .old{
  color: #767676;
  text-decoration: line-through;
}
.content .title{
  margin: 20px 0 10px 0;
  font-size: 24px;
}
.goodsDetails{
  width: 100%;
  background-color: #fff;
  text-align: center;
  padding: 15px 0;
  border-bottom: 1px solid #EDEDED;
}

.down{
  width: 100%;
  height: 60px;
  background-color: #fff;
  /* border-top: 1px solid #000; */
  position: fixed;
  bottom: 0;
  left: 0;
}
.down .left{
  width: 40%;
  float: left;
}
.down .left .one{
  width: 30%;
  margin-top: 10px;
  text-align: center;
  float: left;
  position: relative;
}
.down .left .one image{
  display: inline-block;
  width: 60%;
}
.down .left .one view{
  font-size: 12px;
}
.down .left .one .getCarNum{
  position: absolute;
  top: 0;
  right: 0;
  background-color: #FF6600;
  color: #fff;
  padding: 0 4px;
  border-radius: 50px;
}
.down .right{
  width: 60%;
  float: right;
  line-height: 50px;
  margin-top: 5px;
  color: #fff;
  text-align: center;
}

.down .right .addCar{
  width: 50%;
  float: left;
  background-color: #FDCD01;
  background: linear-gradient(to right,#FDCD01,#FD9A01);
  border-bottom-left-radius: 50px;
  border-top-left-radius: 50px;
}
.down .right .goBuy{
  width: 50%;
  float: right;
  background: linear-gradient(to right,#FF7D01,#FC592E);
  border-bottom-right-radius: 50px;
  border-top-right-radius: 50px;
}
