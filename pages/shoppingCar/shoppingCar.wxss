/* pages/shoppingCar/shoppingCar.wxss */
page{
  background-color: #EDEDED;
}
view{
  background-color: #fff;
}

/* 商品 */
.carGoods{
  height: 80px;
  padding: 10px 0;
  border-bottom: 1px solid #898989;
}
.carGoods checkbox{
  float: left;
  line-height: 80px;
}
.carGoods>image{
  float: left;
  width: 100px;
  margin-right: 10px;
}
.carGoods .content{
  float: left;
}
.carGoods .content .title{
  font-size: 18px;
}
.carGoods .content .price{
  margin: 8px 0;
  color: #EB625C;
  font-size: 14px;
}
.carGoods .content .num{
  text-align: center;
  line-height: 20px;
  position: relative;
}
.carGoods .content .num view{
  width: 20px;
  height: 20px;
  border: 1px solid #898989;
  position: absolute;
  left: 0;
  top: 0;
}
