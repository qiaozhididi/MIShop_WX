page{
  background-color: #f5f5f5;
  font-size: 16px;
}
.username{
  width: 95%;
  margin: 20px auto;
}
.username .pp{
  margin-bottom: 5px;
  font-size: 14px;
  color: #727272;
}
.username .info{
    height: 100px;
}
.username .ii{
padding: 10px 0 10px 10px;
}
.info{
  background-color: #fff;
  overflow: hidden;
}
.info text{
  float: left;
  width: 25%;
  margin:4px 0 0 5px;
}
.info input{
  color: #727272;
  font-size: 14px;
}
.down{
  width: 100%;
  height: 60px;
  background-color: #fff;
  /* border-top: 1px solid #000; */
  position: fixed;
  bottom: 0;
  left: 0;
  overflow: hidden;
}
.down .del{
  color: red;
  text-align: center;
  line-height: 60px;
  background:#fff;
  width: 49%;
  float: left;
}
.down .save{
  color: #fff;
  text-align: center;
  line-height: 60px;
  background: linear-gradient(to right,#FF7D01,#FC592E);
  width: 49%;
  float: right;
}
