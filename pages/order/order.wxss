page{
  background-color: #f5f5f5;
  font-size: 16px;
}
.swiperTab{
  width: 100%;
  height: 30px;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 999;
}
.swiperTab view{
  float: left;
  width: 33.3%;
  text-align: center;
  line-height: 50px;
  background-color: #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}
.swiperTab .con{
  border-bottom: 1px solid #ff6600;
  color: #ff6600;
}
.swiperContent{
  margin-top: 70px;
}
.item{
  width: 90%;
  margin: 0 auto 20px;
  background-color: #fff;
  border-radius: 10px;
}
.item .goods{
  width: 90%;
  margin: 0 auto;
  padding: 20px 0;
  overflow: hidden;
}
.item .goods image{
  width: 100px;
  float: left;
}
.item .goods .middle{
  float: left;
  margin-left: 10px;
}
.item .goods .middle .title{
  font-size: 18px;
}
.item .goods .middle .dec{
  margin: 6px 0;
  color: #727272;
}
.item .goods .middle .other{
  font-size: 12px;
  color: #ff6600;
  background-color: #FAF2E9;
  border-radius: 5px;
}
.item .goods .right{
  float: right;
  text-align: right;
}
.item .goods .right .num{
  margin: 6px 0;
  color: #727272;
}
.item .total{
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
}
.item .total .totalPrice{
  float: right;
}
.item .total .totalPrice view{
  float: left;
}
.item .total .totalPrice .left{
  color: #727272;
  margin-right: 8px;
}
.item .down{
  width: 90%;
  margin: 0 auto;
  overflow: hidden;
  padding: 20px 0;
}
.item .down .btn{
  float: right;
  border: 1px solid #ff6600;
  color: #ff6600;
  padding: 6px 20px;
  border-radius: 40px;
}