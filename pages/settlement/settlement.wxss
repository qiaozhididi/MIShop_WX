page{
  background-color: #f5f5f5;
  font-size: 16px;
}
.emptySite{
  width: 90%;
  margin: 20px auto;
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  line-height: 80px;
  position: relative;
}
.emptySite image{
  width: 30px;
  float: left;
  padding: 25px 20px 0;
}
.emptySite .text{
  float: left;
}
.emptySite .right{
  float: right;
  padding-right: 20px;
}
.bg{
 width: 100%;
 height: 4px;
 position: absolute;
 left: 0;
 bottom: 0;
 background-size: auto 100%;
}
.address{
  width: 90%;
  margin: 20px auto 15px;
  background-color: #fff;
  border-radius: 10px;
  position: relative;
}
.address .text:nth-child(1){
  padding: 20px 0 10px 20px;
}
.address .text:nth-child(2){
  font-size: 18px;
  font-weight: 800;
  padding-left: 20px;
}
.address .text:nth-child(3){
  padding: 10px 0 20px 20px;
}
.address .text:nth-child(3) text{
  margin-right: 10px;
}
.address .right{
  float: right;
  margin: -70px 20px 0 0;
}

.item{
  width: 90%;
  margin: 0 auto 20px;
  background-color: #fff;
  border-radius: 10px;
}
.item .goods{
  width: 90%;
  margin: 0 auto;
  padding: 20px 0;
  overflow: hidden;
}
.item .goods image{
  width: 100px;
  float: left;
}
.item .goods .middle{
  float: left;
  margin-left: 10px;
}
.item .goods .middle .title{
  font-size: 18px;
}
.item .goods .middle .dec{
  margin: 6px 0;
  color: #727272;
  font-size: 14px;
}
.item .goods .right{
  float: right;
  text-align: right;
}
.down{
  width: 100%;
  height: 60px;
  background-color: #fff;
  /* border-top: 1px solid #000; */
  position: fixed;
  bottom: 0;
  left: 0;
}
.down .list{
  width: 90%;
  margin: 0 auto;
}
.down .list .left{
  width: 50%;
  float: left;
  line-height: 60px;
}
.down .list .left .price{
  color: #ff6600;
  font-size: 18px;
  font-weight: 800;
}
.down .list .right{
  width: 50%;
  float: right;
  line-height: 50px;
  margin-top: 5px;
  color: #fff;
  text-align: center;
}
.down .right .goBuy{
  width: 50%;
  float: right;
  background: linear-gradient(to right,#FF7D01,#FC592E);
  border-radius: 50px;
}