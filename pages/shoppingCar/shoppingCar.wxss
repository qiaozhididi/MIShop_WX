.carGoods .content .num .number{
  width: 40px;
  left: 21px;
}
.carGoods .content .num .add{
  left: 62px;
}
.carGoods .del{
  width: 30px;
  float: right;
  margin: 40px 10px 0 0;
}
.carGoods .del image{
  width: 100%;
}


/* 结算 */
.down{
  width: 100%;
  height: 50px;
  line-height: 50px;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 18px;
}
.down .total{
  float: left;
  margin-left: 20px;
}
.down .total .totalPrice{
  color: #FB6600;
}
.down .settlement{
  float: right;
  background-color: #FB6600;
  width: 100px;
  text-align: center;
  color: #fff;
}
.car{
  width: 100%;
  background-color: #EDEDED;
  text-align: center;
  font-size: 20px;
}
.car view{
  background-color: #EDEDED;
}
.car image{
  width: 30%;
  margin: 50px 0 30px;
}
.car .toIndex{
  background-color: #FB6600;
  color: white;
  width: 80%;
  margin: 30px auto;
  padding: 10px 0;
  font-size: 24px;
  border-radius: 5px;
}